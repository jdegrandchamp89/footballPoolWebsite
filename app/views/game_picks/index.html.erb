<%= render 'layouts/navigationSignedIn' %>
<p id="notice"><%= notice %></p>

<div id="margin">
<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th scope="col">Team1</th>
      <th scope="col">Team2</th>
      <th scope="col">GameDateTime</th>
      <th scope="col">Week</th>
      <th scope="col">Pickedteam</th>
      <th scope="col">Spread</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_picks.each do |game_pick| %>
      <tr>
        <td><%= game_pick.team1 %></td>
        <td><%= game_pick.team2 %></td>
        <td><%= game_pick.gamedatetime %></td>
        <td><%= game_pick.week %></td>
        <td><%= game_pick.pickedteam %></td>
        <td><%= game_pick.spread %></td>
        <td><%= link_to 'Show', game_pick %></td>
        <td><%= link_to 'Edit', edit_game_pick_path(game_pick) %></td>
        <td><%= link_to 'Destroy', game_pick, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Game Pick', new_game_pick_path %>
