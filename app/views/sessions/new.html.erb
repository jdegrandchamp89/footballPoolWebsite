<p id=”alert”><%= alert %></p>
<div id="this-body" class="text-center">
<%= form_tag sessions_path, :class => 'form-signin' do |form| %>
  <h1 class="h3 mb-3 font-weight-normal">Login</h1>
  <div class=”field”>
    <%= label_tag :email, nil, :class => 'sr-only' %>
    <%= text_field_tag :email, nil, placeholder: 'Email', :class => 'form-control' %>
  </div>
  <div class=”field”>
    <%= label_tag :password, nil, :class => 'sr-only' %>
    <%= password_field_tag :password, nil, placeholder: 'Password', :class => 'form-control' %>
  </div>
  <div class=”actions”>
    <%= submit_tag "Login", :class => 'btn btn-lg btn-primary btn-block' %>
  </div>
</div>
<% end %>
